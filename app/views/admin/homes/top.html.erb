注文履歴一覧
<table>
  <tr>
    <td>購入日時</td>
    <td>購入者</td>
    <td>注文個数</td>
    <td>注文ステータス</td>
  </tr>
    <% @orders.each do |order| %>
      <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= l order.created_at,format: :long %>
            <% end %>
          </td>
          <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
          <td><%= order.order_items.sum(:quantity) %></td>
          <td><%= order.status_i18n %></td>
      </tr>
    <% end %>
</table>