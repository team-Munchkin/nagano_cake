<div class="container py-5">
  <div class="row ml-md-5 ml-0 mb-3">
    <h4 class="title col-md-5 col-sm-8 col-10 offset-md-1 offset-sm-2 offset-1 mt-1 mb-md-3 text-center"><%= @customer.family_name %><%= @customer.first_name %>さんの注文履歴一覧</h4>
  </div>
  <div class="col-12 table-responsive">
    <table class='table text-nowrap table-hover table-inverse'>
      <thead>
        <tr class="head">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        </tr>
      </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr class="t-body mb-sm-0 mb-3">
        <td>
        <%= link_to admin_order_path(order.id) do %>
        <%= l order.created_at,format: :long %>
        <% end %>
        </td>
        <td>
          <%= order.customer.family_name %><%= order.customer.first_name %>
        </td>
        <td><%= order.order_items.sum(:quantity) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center">
  <%= paginate @orders, outer_window: 3 %>
</div>

