<div class="container py-5">
   <div class="row">
     <div class="col-xl-5 col-lg-8 col-11 text-center">
       <h4 class="font-weight-bold ml-5 mb-5 title"><%= @customer.family_name %> <%= @customer.first_name %>さんの会員情報編集</h4>
     </div>
   </div>

   <div class="row">
   <div class="col-sm-10 col-11 offset-1">
       <div class="d-flex flex-wrap bd-highlight">
         <span class="flex-fill bd-highlight col-sm-3 col-12">会員ID</span>
         <p class="col-sm-1 col-12 offset-sm-0 offset-2"><%= @customer.id %></p>
       </div>
     <%= form_with model: @customer,url: admin_customer_path(@customer), local: true do |f| %>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-sm-3 col-12">氏名</span>
        <p class="form_group flex-fill">
          <%= f.text_field :family_name ,class: "form_control mr-4 flex-fill" %>
          <%= f.text_field :first_name ,class: "form_control flex-fill bd-highlight" %>
        </p>
      </div>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-sm-3 col-12">フリガナ</span>
        <p class="form_group">
          <%= f.text_field :family_name_kana ,class: "form_control mr-4 flex-fill" %>
          <%= f.text_field :first_name_kana ,class: "form_control flex-fill bd-highlight" %>
        </p>
      </div>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-sm-3 col-12">郵便番号</span>
        <p class="form_group">
          <%= f.text_field :post_code ,class: "form_control flex-fill bd-highlight" %>
        </p>
      </div>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-sm-3 col-12">住所</span>
        <p class="form_group">
          <%= f.text_field :address ,class: "form_control flex-fill bd-highlight",size: "70" %>
        </p>
      </div>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-sm-3 col-12">電話番号</span>
        <p class="form_group">
          <%= f.text_field :phone_number ,class: "form_control flex-fill bd-highlight" %>
        </p>
      </div>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-sm-3 col-12">メールアドレス</span>
        <p class="form_group">
          <%= f.text_field :email ,class: "form_control flex-fill bd-highlight" %>
        </p>
      </div>

      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-sm-3 col-12">会員ステータス</span>
        <p class="form_group">
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_active_false, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_active_true, "退会" %>
        </p>
      </div>

        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3"></span>
          <span class="form_group">
            <%= f.submit "変更を保存" ,class: "btn btn-success px-5 flex-fill bd-highlight" %>
         </div>
      <% end %>
  </div>
</div>



</div>