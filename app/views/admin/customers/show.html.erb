<div class="container">
  <div class="row">
    <div class="col-3 text-center">
      <h4 class="mb-5 font-weight-bold" style="background-color: #f1f1f1;"><%= @customer.family_name + @customer.first_name %>の会員詳細</h4>
    </div>
  </div>
  <div class="row justify-content-between mb-4">
   <div class='col-2'>会員ID</div>
   <div class= 'col-10'><%= @customer.id %></div>
  </div>

  <div class="row justify-content-between mb-4">
   <div class='col-2'>氏名</div>
   <div class= 'col-10'><%= @customer.family_name %> <%= @customer.first_name %></div>
  </div>

  <div class="row justify-content-between mb-4">
   <div class='col-2'>カナ</div>
   <div class= 'col-10'><%= @customer.family_name_kana %> <%= @customer.first_name_kana %></div>
  </div>

  <div class="row justify-content-between mb-4">
   <div class='col-2'>郵便番号</div>
   <div class= 'col-10'><%= @customer.post_code %></div>
  </div>

  <div class="row justify-content-between mb-4">
   <div class='col-2'>住所</div>
   <div class= 'col-10'><%= @customer.address %></div>
  </div>

  <div class="row justify-content-between mb-4">
   <div class='col-2'>電話番号</div>
   <div class= 'col-10'><%=@customer.phone_number%></div>
  </div>

  <div class="row justify-content-between mb-4">
   <div class='col-2'>メールアドレス</div>
   <div class= 'col-10'><%= @customer.email%></div>
  </div>

  <div class="row justify-content-between mb-4">
   <div class='col-2'>会員ステータス</div>
   <div class= 'col-10'>
     <% if @customer.is_deleted == true %>
       <%= "退会" %>
     <% else %>
       <%= "有効" %>
     <% end %>
   </div>
  </div>
  <div class="row justify-content-around">
   <div class="col-2">
    <%= link_to "編集する", edit_admin_customer_path , class: "btn btn-sm btn-success px-4" %>
   </div>
   <div class="col-10">
    <%= link_to "注文履歴一覧を見る", orders_path, class: "btn btn-sm btn-primary px-4"%>
   </div>
  </div>
</div>







