<div class="container pt-5">
  <div class="row">
    <div class="col-3">
      <h4><%= "#{@keyword}の検索結果" %></h4>
    </div>
  </div>
  <div class="row">
    <div class="table">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th></th>
        <th>ステータス</th>
      </tr>
      <% @Items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_items_path(item) do%>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre_id.name %></td>
          <td><%= item.is_active %></td>
        </tr>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @items %>
  </div>
</div>

