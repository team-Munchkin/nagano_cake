<div class="container py-5">
  <div class="row">
    <div class="col-lg-3 col-12">
      <h4><%= "#{@keyword}の検索結果" %></h4>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <tr class="head">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th></th>
        <th>ステータス</th>
      </tr>
      <% @search_items.each do |item| %>
        <tr class="t-body mb-sm-0 mb-3">
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do%>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td></td>
          <td>
            <% if item.is_active == true %>
              <span class="text-success font-weight-bold">
                <%= "販売中" %>
              </span>
            <% else %>
              <span class="text-secondary font-weight-bold">
                <%= "販売停止中" %>
              </span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center mt-4">
    <%= paginate @search_items, outer_window: 3 %>
  </div>
</div>

