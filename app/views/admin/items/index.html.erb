<div class= "container py-5">
   <div class="row">
    <div class="col-lg-2 col-md-3 col-sm-11 col-9 text-center">
     <h4 class="title">商品一覧</h4>
    </div>
   <div class="col-3 offset-lg-9 col-sm-1 offset-md-8">
    <%= link_to new_admin_item_path do %>
    <i class="fa-regular fa-circle-up fa-2xl" style="color: #7b5544;"></i>
    <% end %>
   </div>
  </div>

 <div class= "row">
   <div class="col-12 table-responsive">
    <table class='table text-nowrap table-hover table-inverse'>
        <tr class="head">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
          <tr class="t-body mb-sm-0 mb-3">
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
             <% if item.is_active == true %>
               <span class="text-success font-weight-bold">
                 <%= "販売中" %>
               </span>
             <% else %>
               <span class="text-secondary font-weight-bold">
                 <%= "販売停止中" %>
               </span>
             <% end %>
            </td>
        <% end %>
    </table>
   </div>
  </div>

  <div class="row justify-content-center">
  <%= paginate @items, outer_window: 3  %>
  </div>
</div>


