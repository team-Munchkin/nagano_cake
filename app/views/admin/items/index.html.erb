<div class= "container mt-3">
   <div class="row justify-content-between">
    <div class="col-4">
     <h4>商品一覧</h4>
    </div>
   <div class="row justify-content-between">
    <%= link_to new_admin_item_path do %>
    <i class="fa-regular fa-circle-up fa-2xl"></i>
    <% end %>
   </div>
  </div>

 <div class= "row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
             <% if item.is_active == true %>
               <%= "販売中" %>
             <% else %>
               <%= "販売停止中" %>
             <% end %>
            </td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @items %>


