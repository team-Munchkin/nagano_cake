<div class='container px-5 my-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 '>
      <h4>商品詳細</h4>
      <%= image_tag @item.get_image, size:'320x213' %>
    </div>

    <div class='col-md-8 offset-md-1'>

       <div class='group mb-3 row justify-content-between'>
           <div class='col-3'>商品名</div>
           <div class= 'col-9'> <%= @item.name %> </div>
       </div>


       <div class='group mb-3 row justify-content-between'>
           <div class='col-3'>商品説明</div>
           <div class= 'col-9'><%= @item.introduction %></div>
       </div>

       <div class='group mb-3 row justify-content-between'>
           <div class='col-3'>税込価格<br>(税抜価格)</div>
           <div class= 'col-9'><%= @item.taxin_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</div>
       </div>

       <div class='group mb-3 row justify-content-between'>
           <div class='col-3'>ジャンル</div>
           <div class= 'col-9'><%= @item.genre.name %></div>
       </div>

    　 <div class='group mb-3 row justify-content-between'>
           <div class='col-3'>販売ステータス</div>
           <div class= 'col-9'>
             <% if @item.is_active == true %>
               <%= "販売中" %>
             <% else %>
               <%= "販売停止中" %>
             <% end %>
             </div>
     　　　  </div>
    </div>
  </div>
</div>

<div class='text-center'>
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
</div>

