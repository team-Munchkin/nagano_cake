<div class='container px-5 my-5 px-sm-0'>
  <div class='row'>
    <div class='col-lg-2 col-md-3 mb-5 text-center'>
      <h4  class="title">商品詳細</h4>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-3 '>

      <%= image_tag @item.get_image, size:'320x213' %>
    </div>

    <div class='col-lg-8 col-md-6 offset-lg-1 offset-md-3'>

       <div class='group mb-3 row justify-content-between'>
           <div class='col-sm-3 col-12'>商品名</div>
           <div class= 'col-sm-9 col-12'> <%= @item.name %> </div>
       </div>


       <div class='group mb-3 row justify-content-between'>
           <div class='col-lg-3 col-md-4 col-sm-3 col-12'>商品説明</div>
           <div class= 'col-sm-9 col-12'><%= @item.introduction %></div>
       </div>

       <div class='group mb-3 row justify-content-between'>
           <div class='col-lg-3 col-md-4 col-sm-3 col-12'>税込価格<br>(税抜価格)</div>
           <div class= 'col-sm-9 col-12'><%= @item.taxin_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</div>
       </div>

       <div class='group mb-3 row justify-content-between'>
           <div class='col-lg-3 col-md-4 col-sm-3 col-12'>ジャンル</div>
           <div class= 'col-sm-9 col-12'><%= @item.genre.name %></div>
       </div>

    　 <div class='group mb-3 row justify-content-between'>
           <div class='col-lg-3 col-md-5 col-sm-3 col-12'>販売ステータス</div>
           <div class= 'col-sm-9 col-12'>
             <% if @item.is_active == true %>
               <span class="text-success font-weight-bold">
                 <%= "販売中" %>
               </span>
             <% else %>
             <span class="text-secondary font-weight-bold">
               <%= "販売停止中" %>
             </span>
             <% end %>
             </div>
     　　　  </div>
    </div>
  </div>
  <div class='text-center'>
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success px-5 py-2" %>
  </div>
</div>



