<%= form_with model:[:admin, item],local:true do |f| %>

  <div class="form-group row">
    <label>商品画像</label>
　　<%= f.file_field :image, class:'ml-3',accept: "image/*" %>
  </div>

  <div class="form-group row">
    <div class="form-inline">
      <label>商品名　</label>
      <%= f.text_field :name, class: 'form-control item_name ml-5 form', size: '30', placeholder:"商品名" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-inline ">
      <label>商品説明</label>
      <%= f.text_area :introduction, class: 'form-control item_introduction ml-5 form', size: '32x6', placeholder:"ここに説明文を記述します" %>
    </div>
  </div>

   <div class="form-group row">
    <div class="form-inline">
      <label>税抜価格</label>
      <%= f.text_field :price, class: 'form-control item_price ml-5 form', size: '30', placeholder: "1000" %>円
    </div>
  </div>

   <div class="form-group row">
    <div class="form-inline">
      <label>ジャンル</label>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"}, {class:'form-control item_genre ml-5 pl-5 pr-5'} %>
    </div>

  </div>

  <div class="form-group row">
    <label>販売ステータス</label>
    <%= f.radio_button :is_active, :true ,class: "ml-3" %>
    <%= f.label :is_active_true, "販売中" ,class: "mr-3" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active_false, "販売停止中" %>
  </div>
  <div class="form-group text-center">
    <% if f.object.new_record? %>
      <%= f.submit "新規登録", class: 'btn btn-success px-5' %>
    <% else %>
      <%= f.submit "変更を保存", class: 'btn btn-success px-5' %>
    <% end %>
  </div>
<% end %>


