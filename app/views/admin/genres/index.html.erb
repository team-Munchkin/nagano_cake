<div class="container">
  <div class="row">
    <div class="col-md-1">
      <h2>ジャンル一覧・追加</h2>
      <span>ジャンル名</span>
      <%= form_with model: @genre, url: '/admin/genres' do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
      <% end %>
      <table class="table table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to '編集する', edit_admin_genre_path(genre.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <p></p>

    </div>
  </div>
</div>