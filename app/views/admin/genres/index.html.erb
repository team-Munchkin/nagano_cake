<div class="container py-5">
  <div class="row">
    <div class="col-md-8 col-12 justify-content-center">
      <h4 class="col-lg-5 col-md-7 col-11 offset-md-1 text-center title">ジャンル一覧・追加</h4>

      <div class="col-md-9 col-11" >
      <%= form_with model: @genre, url: '/admin/genres' do |f| %>
      <p class="form-group my-5">
        <%= f.label :name, "ジャンル名", class: "font-weight-bold" %>
        <%= f.text_field :name, placeholder: 'ジャンル名', class: "mx-5" %>
        <%= f.submit '新規登録', class: 'btn btn-success offset-lg-0 offset-9 mt-lg-0 mt-3' %>
      </p>
      <% end %>
      </div>
      <div class="col-md-6 col-12">
        <table class="table table-hover border-bottom">
          <tr class="head">
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        <tbody>
          <% @genres.each do |genre| %>
          <tr class="t-body mb-sm-0 mb-3">
            <td class="align-middle">
              <%= genre.name %>
            </td>
            <td class="text-center">
              <%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>