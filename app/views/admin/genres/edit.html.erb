<div class="container py-5">
  <div class="row">
    <div class="col-md-8 col-12 justify-content-center">
      <h4 class="col-xl-3 col-lg-5 col-md-5 col-11 offset-md-1 offset-0 text-center title">ジャンル編集<h4>

      <div class="col-12" >
        <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
          <p class="form-group my-5">
            <%= f.label :name, "ジャンル名", class: "font-weight-bold" %>
            <%= f.text_field :name, placeholder: 'ジャンル名', class: "mx-md-5 mx-2" %>
            <%= f.submit '変更を保存', class: 'btn btn-success px-4 offset-xl-0 offset-sm-8 offset-4 mt-xl-0 mt-3' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
