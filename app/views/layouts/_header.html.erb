<header>
  <div class="row">
    <nav class="navbar navbar-expand-lg navbar-light w-100">
      <div class="col-2 pull-left">
        <%= link_to root_path do %>
          <%= image_tag 'kari.png',size: "160x102" %>
        <% end %>
      </div>
      <div class="col-2"></div>
      <div class="col-3">
        <% if customer_signed_in? %>
          <p class="text-white">ようこそ、<%= current_customer.family_name %>さん！</p>
        <% end %>
      </div>
      <div class="col-5">
        <div class="row justify-content-end">
          <% if admin_signed_in? %>
            <% if request.fullpath.include? "/admin" %>
              <div class="d-flex">
                <p>
                  <%= link_to "商品一覧", admin_items_path, class: "text-white mr-5" %>
                </p>
                <p>
                  <%= link_to "会員一覧", admin_customers_path, class: "text-white mr-5" %>
                </p>
                <p>
                  <%= link_to "注文履歴一覧", admin_root_path, class: "text-white mr-5" %>
                </p>
                <p>
                  <%= link_to "ジャンル一覧", admin_genres_path, class: "text-white mr-5" %>
                </p>
                <p>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "text-white mr-3" %>
                </p>
              </div>
            <% else %>
              <div class="d-flex justify-content-end">
                <p>
                  <%= link_to "マイページ", customers_path, class: "text-white mr-5" %>
                </p>
                <p>
                  <%= link_to "商品一覧", items_path, class: "text-white mr-5" %>
                </p>
                <p>
                  <%= link_to "カート", cart_items_path, class: "text-white mr-5" %>
                </p>
                <p>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "text-white mr-3" %>
                </p>
              </div>
            <% end %>
          <% elsif customer_signed_in? %>
            <div class="d-flex justify-content-end">
              <p>
                <%= link_to "マイページ", customers_path, class: "text-white mr-5" %>
              </p>
              <p>
                <%= link_to "商品一覧", items_path, class: "text-white mr-5" %>
              </p>
              <p>
                <%= link_to "カート", cart_items_path, class: "text-white mr-5" %>
              </p>
              <p>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "text-white mr-3" %>
              </p>
            </div>
          <% else %>
            <div class="d-flex justify-content-end">
              <p>
                <%= link_to "About", about_path, class: "text-white mr-5" %>
              </p>
              <p>
                <%= link_to "商品一覧", items_path, class: "text-white mr-5" %>
              </p>
              <p>
                <%= link_to "新規登録", new_customer_registration_path, class: "text-white mr-5" %>
              </p>
              <p>
                <%= link_to "ログイン", new_customer_session_path, class: "text-white mr-3" %>
              </p>
            </div>
          <% end %>
        </div>
        <div class="row justify-content-end mr-1">
          <div class="search_form">
            <% if admin_signed_in? %>
              <% if request.fullpath.include? "/admin" %>
                <%= form_with url: admin_searches_path,method: :get do |f| %>
                  <%= f.text_field :keyword ,placeholder: "Search" %>
                  <% f.submit %>
                <% end %>
              <% else %>
                <%= form_with url: searches_path,method: :get do |f| %>
                  <%= f.text_field :keyword ,placeholder: "Search" %>
                  <% f.submit %>
                <% end %>
              <% end %>
            <% else %>
              <%= form_with url: searches_path,method: :get do |f| %>
                <%= f.text_field :keyword ,placeholder: "Search" %>
                <% f.submit %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </div>
</header>