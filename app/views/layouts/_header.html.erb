<header class="border-bottom">
  <div class="row">
    <nav class="navbar navbar-expand-lg navbar-light w-100">
      <div class="col-2 pull-left">
        <%= image_tag 'kari2.jpg' %>
      </div>
      <div class="col-2"></div>
      <div class="col-3">
        <% if customer_signed_in? %>
          <p>ようこそ、<%= current_customer.family_name %>さん！</p>
        <% end %>
      </div>
      <div class="col-5">
        <div class="row">
          <% if admin_signed_in? %>
            <% if request.fullpath.include? "/admin" %>
              <div class="d-flex justify-content-end">
                <p>
                  <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary mr-3" %>
                </p>
                <p>
                  <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary mr-3" %>
                </p>
                <p>
                  <%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-outline-secondary mr-3" %>
                </p>
                <p>
                  <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary mr-3" %>
                </p>
                <p>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary" %>
                </p>
              </div>
            <% else %>
              <div class="d-flex justify-content-end">
                <p>
                  <%= link_to "マイページ", customers_path, class: "btn btn-outline-secondary mr-3" %>
                </p>
                <p>
                  <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mr-3" %>
                </p>
                <p>
                  <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mr-3" %>
                </p>
                <p>
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary" %>
                </p>
              </div>
            <% end %>
          <% elsif customer_signed_in? %>
            <div class="d-flex justify-content-end">
              <p>
                <%= link_to "マイページ", customers_path, class: "btn btn-outline-secondary mr-3" %>
              </p>
              <p>
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mr-3" %>
              </p>
              <p>
                <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mr-3" %>
              </p>
              <p>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary" %>
              </p>
            </div>
          <% else %>
            <div class="d-flex justify-content-end">
              <p>
                <%= link_to "About", about_path, class: "btn btn-outline-secondary mr-3" %>
              </p>
              <p>
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mr-3" %>
              </p>
              <p>
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary mr-3" %>
              </p>
              <p>
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary" %>
              </p>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="search_form">
            <p></p>
          </div>
        </div>
      </div>
    </nav>
  </div>
</header>