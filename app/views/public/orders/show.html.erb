
<h2>注文履歴詳細</h2>

<h4>注文情報</h4>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= @order.post_address_display %></td>
      <td><%= @order.payment_method_i18n %></td>
      <td><%= @order.status_i18n %></td>
    </tr>
  </tbody>
</table>

<h4>注文内容</h4>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= order_item.item.taxin_price %></td>
      <td><%= order_item.quantity %></td>
      <td><%= order_item.order_subtotal %></td>
      <% @sum += order_item.order_subtotal %>
    <% end %>
  </tbody>
</table>

<h4>請求情報</h4>
<table>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @sum.to_s(:delimited) %></td>
      <td><%= @order.postage %></td>
      <td><%= @order.total_price.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

