<%= render "public/shared/error_messages", resource: resource %>
<div class="container py-5">
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12 text-center">
      <h3 class="mb-5 title">新規会員登録</h3>
    </div>
  </div>

  <%= form_with model: @customer, url: "/customers" do |f| %>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">名前</span>
      <p class="form_group">
        <%= f.label :family_name , "(姓)" , class: "flex-fill bd-highlight mr-3 px-md-0 px-3"%>
        <%= f.text_field :family_name ,class: "form_control flex-fill bd-highlight mr-5",size: "25", placeholder: "令和" %>
        <%= f.label :first_name , "(名)", class: "flex-fill bd-highlight mr-3 px-md-0 px-3"%>
        <%= f.text_field :first_name ,class: "form_control flex-fill bd-highlight",size: "25", placeholder: "道子" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">フリガナ</span>
      <p class="form_group">
        <%= f.label :family_name_kana, "(セイ)", class: "flex-fill bd-highlight px-md-0 px-3" %>
        <%= f.text_field :family_name_kana ,class: "form_control mr-5 flex-fill bd-highlight",size: "25", placeholder: "レイワ" %>
        <%= f.label :first_name_kana , "(メイ)", class: "flex-fill bd-highlight px-md-0 px-3" %>
        <%= f.text_field :first_name_kana ,class: "form_control flex-fill bd-highlight",size: "25", placeholder: "ミチコ" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">メールアドレス</span>
      <p class="form_group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form_control  flex-fill bd-highlight ml-md-5",size: "25", placeholder: "sample@example.com" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">郵便番号(ハイフンなし)</span>
      <p class="form_group">
        <%= f.text_field :post_code,class: "form_control flex-fill bd-highlight ml-md-5",size: "25", placeholder: "0000000" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">住所</span>
      <p class="form_group">
        <%= f.text_field :address , class: "form_control flex-fill bd-highlight ml-md-5",size: "60", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">電話番号(ハイフンなし)</span>
      <p class="form_group">
        <%= f.text_field :phone_number , class: "form_control flex-fill bd-highlight ml-md-5",size: "25", placeholder: "0000000000" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">パスワード(6文字以上)</span>
      <p class="form_group">
        <%= f.password_field :password, autocomplete: "new-password" ,class: "form_control flex-fill bd-highlight ml-md-5",size: "25" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 col-md-3 col-sm-12 col-12">パスワード(確認用)</span>
      <p class="form_group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_control flex-fill bd-highlight ml-md-5",size: "25" %>
      </p>
    </div>
    <div class="d-flex bd-highlight">
      <span class="flex-fill bd-highlight col-3"></span>
      <p class="form_group">
        <%= f.submit "新規登録" ,class: "btn btn-success px-5 flex-fill bd-highlight ml-md-5" %>
      </p>
    </div>
  <%end%>
  <h4 class="col-lg-4 col-md-4 col-sm-11 col-11 mb-3 ml-4 pl-3 text-center title">既に登録済みの方</h4>

  <p class="ml-5 pl-3"><%= render "public/shared/links" %>　からログインしてください。</p>
</div>