 <div class="container pt-5">
   <div class="row">
    <div class="col-lg-3 col-md-4 col-sm-12 col-12">
       <h4 class="font-weight-bold ml-5 mb-5 text-center title">
        会員情報編集
      </h4>
    </div>
   </div>
   <div class="row">
     <div class="col-10">
       <%= form_with model: current_customer,url: customers_path, local: true do |f| %>
        <div class="d-flex flex-wrap offset-md-0 offset-2 ">
          <span class="flex-fill col-md-3 col-12">氏名</span>
          <p class="form_group">
            <%= f.text_field :family_name ,class: "form_control mr-4 flex-fill" %>
            <%= f.text_field :first_name ,class: "form_control flex-fill" %>
          </p>
        </div>
        <div class="d-flex bd-highlight flex-wrap offset-md-0 offset-2 ">
          <span class="flex-fill col-md-3 col-12">フリガナ</span>
          <p class="form_group">
            <%= f.text_field :family_name_kana ,class: "form_control mr-4 flex-fill" %>
            <%= f.text_field :first_name_kana ,class: "form_control flex-fill" %>
          </p>
        </div>
        <div class="d-flex bd-highlight flex-wrap offset-md-0 offset-2">
          <span class="flex-fill col-md-3 col-12">郵便番号</span>
          <p class="form_group">
            <%= f.text_field :post_code ,class: "form_control flex-fill" %>
          </p>
        </div>
        <div class="d-flex bd-highlight flex-wrap offset-md-0 offset-2">
          <span class="flex-fill col-md-3 col-12">住所</span>
          <p class="form_group">
            <%= f.text_field :address ,class: "form_control flex-fill",size: "70" %>
          </p>
        </div>
        <div class="d-flex bd-highlight flex-wrap offset-md-0 offset-2">
          <span class="flex-fill col-md-3 col-12">電話番号</span>
          <p class="form_group">
            <%= f.text_field :phone_number ,class: "form_control flex-fill" %>
          </p>
        </div>
        <div class="d-flex bd-highlight flex-wrap offset-md-0 offset-2">
          <span class="flex-fill col-md-3 col-12">メールアドレス</span>
          <p class="form_group">
            <%= f.text_field :email ,class: "form_control flex-fill" %>
          </p>
        </div>
        <div class="d-flex flex-wrap bd-highlight">
          <span class="flex-fill "></span>
          <span class="form_group col-lg-3 col-md-12 col-sm-12 col-12 offset-lg-0 offset-3">
            <%= f.submit "編集内容を保存" ,class: "btn btn-success px-5 flex-fill" %>
          </span>
      <% end %>
      <span class="flex-fill col-lg-3 col-md-12 col-sm-12 col-12 offset-lg-2 offset-md-3 offset-5 mb-3 mt-lg-0 mt-md-3 mt-0">
        <%= link_to "退会する", unscribe_customers_path ,class: "btn btn-danger px-md-5 px-4 mt-md-0 mt-5 flex-fill" %>
      </span>
      </div>
    </div>
  </div>
</div>