 <div class="container">
   <div class="row">
     <div class="col-3">
       <h4 class="font-weight-bold ml-5 mb-5">会員情報編集</h4>
     </div>
   </div>
   <div class="row">
     <div class="col-10">
       <%= form_with model: current_customer,url: customers_path, local: true do |f| %>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3">氏名</span>
          <p class="form_group">
            <%= f.text_field :family_name ,class: "form_control mr-4 flex-fill" %>
            <%= f.text_field :first_name ,class: "form_control flex-fill bd-highlight" %>
          </p>
        </div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3">フリガナ</span>
          <p class="form_group">
            <%= f.text_field :family_name_kana ,class: "form_control mr-4 flex-fill" %>
            <%= f.text_field :first_name_kana ,class: "form_control flex-fill bd-highlight" %>
          </p>
        </div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3">郵便番号</span>
          <p class="form_group">
            <%= f.text_field :post_code ,class: "form_control flex-fill bd-highlight" %>
          </p>
        </div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3">住所</span>
          <p class="form_group">
            <%= f.text_field :address ,class: "form_control flex-fill bd-highlight",size: "70" %>
          </p>
        </div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3">電話番号</span>
          <p class="form_group">
            <%= f.text_field :phone_number ,class: "form_control flex-fill bd-highlight" %>
          </p>
        </div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3">メールアドレス</span>
          <p class="form_group">
            <%= f.text_field :email ,class: "form_control flex-fill bd-highlight" %>
          </p>
        </div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-3"></span>
          <span class="form_group">
            <%= f.submit "編集内容を保存" ,class: "btn btn-success px-5 flex-fill bd-highlight" %>
          </p>
        </span>
      <% end %>
      <span class="flex-fill bd-highlight col-2"></span>
      <span class="flex-fill bd-highlight col-3">
        <%= link_to "退会する", unscribe_customers_path ,class: "btn btn-danger px-5 flex-fill bd-highlight" %>
      </span>
    </div>
  </div>
</div>