
<div class= "container py-5">
    <div  class= "row  mb-3">
        <div class= "col-xl-3 col-lg-4 col-md-5 text-center"><h4 class="title">ショッピングカート</h4></div>
        <div class="offset-7">
          <% if @cart_items.present? %>
            <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete,"data-confirm" => "商品を削除しますか？", class: "btn btn-danger "%>
          <% end %>
        </div>
    </div>
    <div class= "row">
      <% if @cart_items.blank? %>
       <div class="col-md-8 text-center">
        <h3>カート内に商品はございません</h3>
       </div>
      <% else %>
        <table class="table table-bordered">
          <thead>
            <tr class="head">
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th><br></th>
            </tr>
          </thead>
                <% @sum = 0 %>
                <% @cart_items.each do |cart_item| %>
          <tbody class="t-body">
            <tr class="mb-sm-0 mb-3">
                <td>
                <%= image_tag cart_item.item.get_image, size:'64x42' %>
                <%= cart_item.item.name %>
                </td>
                <td><%= cart_item.item.taxin_price %></td>
                <td>
                    <%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
                    <%= f.number_field :quantity, min: 1, max: 10 %>
                    <%= f.submit "変更" , class: "btn btn-success" %>
                    <% end %>
                </td>
                <td><%= cart_item.subtotal %></td>
                <td class="text-center"><%= link_to "削除する", cart_item_path(cart_item.id) ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger" %></td>
            </tr>
                <% @sum += cart_item.subtotal %>
                <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
    <div class= "row mb-3">
        <% if @cart_items.present? %>
        <div class='col-md-3 offset-md-1'><%= link_to "買い物を続ける" , items_path , class: "btn btn-primary" %></div>
        <div class= 'col-md-2 offset-md-4 d-flex align-items-center border'>合計金額</div>
        <div class= 'col-md-2 d-flex align-items-center border'><%= @sum %> </div>
    </div>
    <div class= "row">
         <div class= 'col-md-6 offset-md-5'> <%= link_to "情報入力に進む" , new_order_path , class: "btn btn-success " %> </div>
        <% end %>
    </div>
</div>
