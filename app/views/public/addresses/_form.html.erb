<%= form_with model: address do |f| %>
 <div class="col-10">
  <div class="d-flex bd-highlight mb-2">
  <span class="flex-fill bd-highlight col-3 mr-5">郵便番号(ハイフンなし)</span>
  <%= f.text_field :post_code, :placeholder => "0000000", class: "form-controll bd-highlight" %>
  </div>
  <div class="d-flex bd-highlight mb-2">
  <span class="flex-fill bd-highlight col-3 mr-5">住所</span>
  <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class: "form-controll flex-fill bd-highlight" %>
  </div>
  <div class="d-flex bd-highlight">
  <span class="flex-fill bd-highlight col-3 mr-5">宛名</span>
  <%= f.text_field :name, :placeholder => "令和道子", class: "form-controll bd-highlight" %>
  </div>
  </div>
  <div class="d-flex justify-content-end">
  <%= f.submit class: 'form_control bd-highlight btn btn-success', size: "50" %>
  </div>
<% end %>