<div class="container">
  <div class="row justify-content-center">
    <div class="col-11">
      <h4 class="col-3 offset-1 mb-5 text-center", style="background-color: #f1f1f1">配送先登録/一覧</h4>

        <%= render 'form', address: @address %>

      <div class="col-10">
      <table class="table table-bordered col-11 border-da">
        <thead>
          <tr class="text-center", style="background-color: #f1f1f1">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td class="text-center">
              <%= link_to '編集する', edit_address_path(address.id),class: 'btn btn-success mr-3' %>
              <%= link_to '削除する', address_path(address.id), method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
